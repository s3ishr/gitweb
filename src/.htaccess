RewriteEngine on

## Redirect to HTTPS anytime
RewriteCond %{HTTPS}  !=on
RewriteRule ^         https://%{HTTP_HOST}%{REQUEST_URI}  [R=301,L]

<Files "gitweb.cgi">
    <IfModule mod_authz_core.c>
        Require all granted
        Satisfy any
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order deny,allow
        Allow from all
    </IfModule>
</Files>

<Files ~ "^([\._]ht|gitweb_config.perl$)">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order allow,deny
        Deny from all
    </IfModule>
</Files>
